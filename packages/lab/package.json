{
  "name": "@brightlayer-ui/angular-blui-lab",
  "version": "0.0.0-beta.0",
  "description": "Experimental components, services, utilities for angular",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "test": "ng test",
    "test:ci": "ng test --watch false",
    "test:artifacts": "sh ../scripts/testArtifacts.sh",
    "prettier": "prettier \"src/**/**.{ts,json,css,scss,html}\" --write",
    "prettier:check": "prettier \"src/**/**.{ts,json,css,scss,html}\" --check",
    "lint": "eslint \"src/**/**.ts\"",
    "lint:fix": "eslint \"src/**/**.ts\" --fix",
    "watch": "npm-watch",
    "copy-to-demo": "cp -r src/. ../demo/src/blui-lab/",
    "tag:package": "cp ../CHANGELOG.md CHANGELOG.md && npx -p @brightlayer-ui/tag blui-tag -s -angular-blui-lab"
  },
  "watch": {
    "copy-to-demo": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,scss",
      "quiet": false,
      "runOnChangeOnly": false
    }
  },
  "peerDependencies": {
    "@angular/cdk": "^14.0.0",
    "@angular/material": "^14.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.0",
    "@angular/animations": "^14.0.0",
    "@angular/cdk": "^14.0.0",
    "@angular/cli": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/material": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@brightlayer-ui/eslint-config": "^3.0.0",
    "@brightlayer-ui/prettier-config": "^1.0.3",
    "@types/jasmine": "~3.9.0",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^12.20.42",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "jasmine-core": "~3.9.0",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^14.0.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "rxjs": "~6.6.0",
    "ts-node": "~10.2.1",
    "typescript": "4.6.2",
    "yarn-audit-fix": "^6.4.4",
    "zone.js": "~0.11.4"
  },
  "prettier": "@brightlayer-ui/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brightlayer-ui/angular-blui-lab.git"
  },
  "keywords": [
    "angular",
    "components",
    "lab",
    "utilities",
    "brightlayer-ui"
  ],
  "author": "brightlayer-ui <brightlayer-ui@eaton.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/brightlayer-ui/angular-blui-lab/issues"
  },
  "homepage": "https://github.com/brightlayer-ui/angular-blui-lab#readme",
  "dependencies": {
    "tslib": "^2.0.0"
  }
}
